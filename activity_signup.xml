<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#fef1f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:textSize="30sp"
        android:textColor="#ff6f9c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên người dùng"
        android:layout_marginTop="150dp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#333"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:layout_below="@id/editTextUsername"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#333"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/editTextAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu Admin (Free: adminfree123)"
        android:inputType="textPassword"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#333"
        android:textColorHint="#999"/>

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:backgroundTint="#ff6f9c"
        android:textColor="#fff"
        android:layout_below="@id/editTextAdminPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã có tài khoản? Đăng nhập"
        android:textColor="#ff6f9c"
        android:layout_below="@id/buttonSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"/>
</RelativeLayout>